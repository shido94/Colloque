        }

        ::-webkit-scrollbar-thumb
        {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
            background-color: #555;
        }

        .logo{
            text-align: center;
        }

        .logo h1 {
            text-align: center;
            display: inline-block;
            margin-bottom: 0.20em;
            font-size: 3.5em;
        }

        .logo a {
            text-decoration: none;
            color: #F5F5F5;
        }

        #exitButton button{
            padding: 10px 20px;
            font-size: 20px;
            border-radius: 10px;
            width:50%;
        }


        #online{
            width: 210px;
        }


        i {
            margin: 0 8px;
        }

        .hide {
            display: none;
        }

        img {
            transition: -webkit-transform 0.25s ease;
            transition: transform 0.25s ease;
        }

        img:active {
            -webkit-transform: scale(2);
            transform: scale(2);
        }


        .span {
            flex-basis: 100%;
        }

        #outerSender {
            width: 100%;
            padding: 0 0 0 40%;
        }

        #sender {
            max-width: 400px;
            color: white;
            margin: 2px 0 0 2px;
            display: flex;
            flex-wrap: wrap;               /*  added  */
            overflow-wrap: break-word;
            font-size: 15px;
            justify-content: flex-end;     /*  added  */
        }

        #innerSender {
            padding: 8px;
            background-color: #19A319;
            border: 1px solid #19A319;
            border-radius: 15px;
        }

        #outerReceiver {
            width: 100%;
            padding: 0 40% 0 0;
        }

        #receiver {
            max-width: 400px;
            color: white;
            margin: 2px 0 0 2px;
            display: flex;
            flex-wrap: wrap;               /*  added  */
            overflow-wrap: break-word;
            font-size: 15px;
            justify-content: left;     /*  added  */
        }

        #innerReceiver {
            padding: 8px;
            background-color: #0084ff;
            border: 1px solid #0084ff;
            border-radius: 15px;
        }

        #imageSender {
            flex-basis: 0;
            max-width: 400px;
            height: auto;
            color: white;
            margin: 2px 0 0 2px;
            display: flex;
            overflow-wrap: break-word;
            font-size: 15px;
        }

        #innerImageSender {
            width: 100%;
            height: 100%;
            flex-grow: 0;
            right: 0;
            /*flex-shrink: 0;*/
            flex-basis: 0;
            padding: 8px;
            border: 1px solid #99CC66;
            border-radius: 15px;
        }

        #imageReceiver {
            flex-basis: 0;
            max-width: 400px;
            height: auto;
            color: white;
            margin: 2px 0 0 2px;
            display: flex;
            overflow-wrap: break-word;
            font-size: 15px;
        }

        #innerImageReceiver {
            width: 100%;
            height: 100%;
            flex-grow: 0;
            right: 0;
            /*flex-shrink: 0;*/
            flex-basis: 0;
            padding: 8px;
            border: 1px solid #0000FF;
            border-radius: 15px;
        }

        #innerImageSender img {
            height: 140px;
            width: 140px;
        }

        #innerImageReceiver img {
            height: 140px;
            width: 140px;
        }

        #disconnectChat {
            background: red;
        }

        #messageForm {
            background: green;
        }

        #reconnect {
            background: green;
        }

        #home {
            background: red;
        }

        .userStatus {
            color: black;
            border-radius: 5px;
            margin: 1px 55px 1px 0;
            overflow-wrap: break-word;
            font-size: 20px;
            padding: 8px;
        }


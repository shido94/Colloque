            <p >You are going to chat with random person of your college.<br>
                So please avoid abusive language.
            </p>
        </div>
    </div>
</div>
<div class="down">
    <div class="container" id="messageArea">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
                <div class="logo">
                    <h1><a href="/">Colloque</a></h1>
                </div>
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <ul id="server"></ul>
                        <hr>
                        <ul class="chat" id="chat"></ul>
                        <ul>
                            <div id="blah"></div>
                        </ul>
                        <ul id="status" style="color: blue"></ul>
                        <div class="reconnect" id="new_chat">
                            <div class="col-md-4">

                            </div>
                            <div class="col-md-4">
                                <div class="online">
                                    <ul id="online"></ul>
                                </div>
                                <span class="input-group-btn" id="exitButton">
                                    <ul id="online"></ul>
                                    <button class="btn btn-warning btn-sm" id="reconnect">Chat</button>
                                    &nbsp;
                                    <button class="btn btn-warning btn-sm" id="home">Exit</button>
                                </span>
                            </div>
                            <div class="col-md-4">
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" id="disconnectChat">Esc</button>
                            </span>
                            <input id="message" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                            <span class="input-group-btn">
                                <label for="file-input">
                                    <i class="fa fa-paperclip fa-lg" aria-hidden="true"></i>
                                </label>
                                <input type="file" class="file-input hide" name="file" accept="image/*" capture="" id="file-input">
                                <button class="btn btn-warning btn-sm" id="messageForm">Send</button>
                        </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

</body>
<script>

    $(function() {
        var socket = io.connect();
        var $newChat = $('#new_chat');
        var $reConnect = $("#reconnect");
        var $status = $('#status');
        var $disconnect = $('#disconnectChat');
        var $messageForm = $('#messageForm');
        var $message = $('#message');
        var $chat = $('#chat');
        var $messageArea = $('#messageArea');
        var $userFormArea = $('#cover');
        var $userForm = $('#userForm');
        var $users = $('#online');
        var $username = $('#username');
        var $email = $('#email');
        var $error = $('#error');


        var timeout;
        var typing;

        function timeoutFunction() {
            typing = false;
            socket.emit("typing", false);
        }

        $("#home").click(()=>{
            window.location = '/';
        });

        $('.file-input').bind('change', function(e){
            var data = e.originalEvent.target.files[0];
            readThenSendFile(data);
        });

        function readThenSendFile(data){

            var reader = new FileReader();
            reader.onload = function(evt){
                var msg ={};
                msg.file = evt.target.result;
                msg.fileName = data.name;
                socket.emit('file submit', {message:msg, sender: socket.id});
            };
            reader.readAsDataURL(data);
        }

        socket.on('file submitted',(data)=>{
            if(socket.id === data.sender){
                $chat.append('<div id="outerSender"><div id="imageSender">' +
                    '<span class="span"></span><div id="innerImageSender">' + "<img src='" + data.file + "' />" + '</div>' +
                    '</div></div>');
                $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
            }
            else{
                $chat.append('<div id="outerReceiver"><div id="imageReceiver">' +
                    '<div id="innerImageReceiver"><span class="span"></span>' + "<img src='" + data.file + "' />" + '</div>' +
                    '</div></div>');
                $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
            }
        });

        $message.keyup(function(e) {
            typing = true;
            socket.emit('typing', 'typing...');
            clearTimeout(timeout);
            timeout = setTimeout(timeoutFunction, 1000);
        });

        socket.on('typing', function(data) {
            if (data) {
                $status.html(data);
            } else {
                $status.html("");
            }
        });

        // when the client hits ENTER on their keyboard
        $message.keypress(function(e) {
            if(e.which == 13) {
                $(this).blur();
                $messageForm.focus().click();
            }
        });

        $messageForm.click(function (e) {
            e.preventDefault();
            socket.emit('send message', {message: $message.val(),sender: socket.id});
            $message.val('');
        });

        socket.on('user status', function (data) {
            console.log(data);
            $("#server").append('<div class="userStatus" style="text-align: center"><strong>' + data.user + '</strong> : ' + data.msg + '</div>').scrollTop(1E10);
        });

        socket.on('new message', (message)  => {
            if(message.msg.length > 0) {
                if(socket.id === message.sender){
                    console.log("same");
                    $chat.append('<div id="outerSender"><div id="sender"><span class="span"></span><div id="innerSender">' +
                        message.msg + '</div>' + '</div></div>').scrollTop(1E10);
                    $(".panel-body").stop().animate({scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
                }
                else{
                    $chat.append('<div id="outerReceiver"><div id="receiver"><div id="innerReceiver"><span class="span"></span>' +
                        message.msg + '</div>' +
                        '</div></div>').scrollTop(1E10);
                    $(".panel-body").stop().animate({scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
                    console.log("other")
                }
            }
        });

        socket.on('users online',(data)=>{
            $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);

            // if(data.c_length == undefined){
            //     $users.append('<div class="userStatus"><strong>' + "Total online" + '</strong> : ' + data.length + '</div>');
            //     $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
            // }
            // else{
            //     $users.append('<div class="userStatus"><strong>' + "Total online" + '</strong> : ' + data.c_length + '</div>');
            //     $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
            // }
        });

        $userForm.submit(function (e) {
            e.preventDefault();
            socket.emit('c_new user', {
                username : $username.val(),
                email : $email.val()
            }, function (data) {
                console.log(data);
                if (data) {
                    $userFormArea.hide();
                    $newChat.hide();
                    $messageArea.show();
                    $("body").css("background" , "#FFFFFF");
                }
                else{
                    $error.text('Please submit username and password');
                }
            });
            $username.val('');
        });

        $disconnect.click((e) => {
            e.preventDefault();
            socket.emit('c_user disconnect', socket.id, (data) => {
                if(data){
                    $newChat.show();
                    $disconnect.attr('disabled',true);
                    $messageForm.attr('disabled',true);
                    $message.attr('disabled',true);
                    $fileInput.attr('disabled',true);
                    $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
                }
            });
        });

        $reConnect.click((e)=>{
            $chat.empty();
            $("#server").empty();
            $users.empty();
            e.preventDefault();
            socket.emit('c_user reconnect', socket.id,(data)=>{
                if(data){
                    $newChat.hide();
                    $disconnect.attr('disabled',false);
                    $messageForm.attr('disabled',false);
                    $message.attr('disabled',false);
                    $fileInput.attr('disabled',false);
                    $('.panel-footer').show();
                }
            })
        });

        socket.on('c_user disconnect', () => {
            $newChat.show();
            $disconnect.attr('disabled',true);
            $messageForm.attr('disabled',true);
            $message.attr('disabled',true);
            $fileInput.attr('disabled',true);
            $(".panel-body").stop().animate({ scrollTop: $(".panel-body")[0].scrollHeight}, 1000);
        })

    });
</script>
</html>